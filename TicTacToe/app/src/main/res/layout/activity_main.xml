                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_marginTop="16dp"
                            android:contentDescription="@string/cell1Orange"
                            android:tag="@string/cell1Orange"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/cell1Blue"
                            android:layout_width="0dp"
                            android:layout_height="116dp"
                            android:layout_marginTop="14dp"
                            android:contentDescription="@string/cell1Blue"
                            android:tag="@string/cell1Blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="ImageContrastCheck" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cell2Layout"
                        android:layout_width="259dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/cell2Blue"
                            android:layout_width="0dp"
                            android:layout_height="116dp"
                            android:layout_marginTop="14dp"
                            android:contentDescription="@string/cell2Blue"
                            android:tag="@string/cell2Blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/blue_circle"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/cell2Orange"
                            android:layout_width="wrap_content"
                            android:layout_height="120dp"
                            android:layout_marginTop="16dp"
                            android:contentDescription="@string/cell2Orange"
                            android:tag="@string/cell2Orange"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/orange_circle"
                            tools:ignore="ImageContrastCheck" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

